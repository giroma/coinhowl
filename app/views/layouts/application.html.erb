<!DOCTYPE html>
<html>
  <head>
    <title>Coinhowl</title>
    <%= csrf_meta_tags %>
    <script src='https://www.google.com/jsapi'></script>
    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/export/export.min.js"></script>
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
    <script src="//www.amcharts.com/lib/3/amstock.js"></script>
    <script src="https://www.w3schools.com/lib/w3.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key %>"><%= message %></div>
      <% end %>
    <nav>
  <div class="nav-wrapper blue darken-3">
    <%= link_to "CoinHowl", root_path, class: "brand-logo" %>
    <ul class="right hide-on-med-and-down">
      <li><a href="#"><i class="material-icons left">search</i>Search</a></li>
      <% if !current_user %>
      <li><a href="<%= new_user_path %>"><i class="material-icons right">add</i>Signup</a></li>
      <li><a href="#"><i class="material-icons right">account_circle</i>Log In</a></li>
    </ul>
    <% else %>
      <li><a href="<%= user_path(current_user) %>"><i class="material-icons right">account_circle</i>My Account</a></li>
      <li><a href="<%= following_index_path %>"><i class="material-icons right">account_balance_wallet</i>My Portfolio</a></li>

      <!-- <%# link_to "Logout", session_path, method: :delete %> |
      <%# link_to "Portfolio", following_index_path %> -->
    <% end %>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
