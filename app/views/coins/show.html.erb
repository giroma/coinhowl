<%= javascript_include_tag "coins" %>
<%= link_to "Back to Coins", root_url %>

<div class="container row">
      <div class="col s8">
        <%= content_tag "div", id: "chartdiv", data: {chartArray: @data_by_minute_result, coinSymbol: params[:id]} do %>
        <% end %>
      </div>
      <div class="col s4">
        <table class="bordered">
          <thead>
            <tr>
                <th><h2><%= @coin_symbol %></h2></th>
                <th>
                  <a id="unfollow-coin"
                  class="waves-effect waves-light btn red darken-4 <%= 'hide' if !@is_following %>"
                  href="<%= following_path %>"
                  data-method="delete" rel="nofollow">
                  <i class="material-icons left">star</i>Unfollow</a>
                  <a id="follow-coin"
                  class="waves-effect waves-light btn green darken-4 <%= 'hide' if @is_following %>"
                  href="<%= following_path %>"
                  data-method="put" rel="nofollow">
                  <i class="material-icons left">star</i>Follow</a></a>
              </th>
              <th>
                  <i id="alert" class="material-icons <%= 'hide' if !@is_following %>">add_alert</i>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% if @coin_last < @coin_high %>
                <td><h5 class="red-text">LAST:</h5></td>
                <td><h5>&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
              <td class="text-center"><span class="red-text" ><i class="material-icons valign-wrapper red-text">arrow_drop_down</i></span></td>
              <% elsif @coin_last > @coin_high %>
              <td><h5 class="green-text">LAST:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
              <td class="text-center"><span class="green-text"><i class="material-icons valign-wrapper green-text">arrow_drop_up</i></span></td>
              <% else %>
              <td><h5>LAST:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
              <td class="text-center"><span class="black-text"><i class="material-icons valign-wrapper black-text">drag_handle</i></span></td>
              <% end %>
            </tr>
            <tr>
              <td><h5>BASE VOL:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_base_volume, precision: 8) %></h5></td>
            </tr>
            <tr>
              <td><h5>BID:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_bid, precision: 8) %></h5></td>
            </tr>
            <tr>
              <td><h5>ASK:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_ask, precision: 8) %></h5></td>
            </tr>
            <tr>
              <td><h5>HIGH:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_high, precision: 8) %></h5></td>
            </tr>
            <tr>
              <td><h5>LOW:</h5></td>
              <td><h5>&#579; <%= number_with_precision(@coin_low, precision: 8) %></h5></td>
            </tr>
            <tr>
              <td><h6>LAST UPDATED:</h6></td>
              <td><h6><%= @last_updated %></h6></td>
            </tr>
          </tbody>
        </table>
      </div>
</div>
