<%= javascript_include_tag "coins" %>

<div class="container row">
      <div class="col s8">
        <%= content_tag "div", id: "chartdiv", data: {chartArray: @data_by_minute_result, coinSymbol: params[:id]} do %>
        <% end %>
      </div>
      <div class="col s4">
        <table id="show-coin-table" class="bordered">
          <thead id="show-coin-table-head">
            <tr>
                <th><h3 class='js-coin-symbol'><%= @coin_symbol %></h3></th>

                <!-- FOLLOW/UNFOLLOW BUTTON -->
                <th><a id="unfollow-coin"
                class="waves-effect waves-light btn red darken-4 <%= 'hide' if !@is_following %>"
                href="<%= following_path %>"
                data-method="delete" rel="nofollow">
                <i class="material-icons left">star</i>Unfollow</a>
                <a id="follow-coin"
                class="waves-effect waves-light btn green darken-4 <%= 'hide' if @is_following %>"
                href="<%= following_path %>"
                data-method="put" rel="nofollow">
                <i class="material-icons left">star</i>Follow</a></a></th>

                <!-- ALERT -->
                  <th>
                    <a id="alert"
                    class="btn btn-floating btn-large cyan accent-4 <%= 'hide' if !@is_following %>"
                    href="#">
                    <i class="material-icons left">add_alert</i></a>
                  </th>
            </tr>
          </thead>
          <tbody class='coin-prices-table'>
            <tr>
              <!-- LAST -->
              <% if @coin_last < @coin_high %>
                <td><h5 class="red-text">LAST:</h5></td>
                <td><h5 data-field="Last">&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
                <td class="text-center"><span class="red-text" ><i class="material-icons valign-wrapper red-text">arrow_drop_down</i></span></td>
              <% elsif @coin_last > @coin_high %>
                <td><h5 class="green-text">LAST:</h5></td>
                <td><h5 data-field="Last">&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
                <td class="text-center"><span class="green-text"><i class="material-icons valign-wrapper green-text">arrow_drop_up</i></span></td>
              <% else %>
                <td><h5>LAST:</h5></td>
                <td><h5 data-field="Last">&#579; <%= number_with_precision(@coin_last, precision: 8) %></h5></td>
                <td class="text-center"><span class="black-text"><i class="material-icons valign-wrapper black-text">drag_handle</i></span></td>
              <% end %>
            </tr>
            <tr>
              <!-- BASE VOL -->
              <td><h5>&#579;VOL:</h5></td>
              <td><h5 data-field="BaseVolume">&#579; <span><%= number_with_precision(@coin_base_volume, precision: 8) %></h5></td>
              <td></td>
            </tr>
            <tr>
              <!-- BID -->
              <td><h5>BID:</h5></td>
              <td><h5 data-field="Bid">&#579; <%= number_with_precision(@coin_bid, precision: 8) %></h5></td>
              <td></td>
            </tr>
            <tr>
              <!-- ASK -->
              <td><h5>ASK:</h5></td>
              <td><h5 data-field="Ask">&#579; <%= number_with_precision(@coin_ask, precision: 8) %></h5></td>
              <td></td>
            </tr>
            <tr>
              <!-- HIGH -->
              <td><h5>HIGH:</h5></td>
              <td><h5 data-field="High">&#579; <%= number_with_precision(@coin_high, precision: 8) %></h5></td>
              <td></td>
            </tr>
            <tr>
              <!-- LOW -->
              <td><h5>LOW:</h5></td>
              <td><h5 data-field="Low">&#579; <%= number_with_precision(@coin_low, precision: 8) %></h5></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
      <tr>
        <!-- TIMESTAMP -->
        <h6>LAST UPDATED:</h6>
        <h6><%= @local_time %></h6>
</div>
