<%= javascript_include_tag "coins" %>
<%= link_to "Back to Coins", root_url %>

<h4>LAST: &#579; <%= number_with_precision(@coin_last, precision: 8) %></h4>
<h4>BASE VOL: &#579; <%= number_with_precision(@coin_base_volume, precision: 8) %></h4>
<h4>BID: &#579; <%= number_with_precision(@coin_bid, precision: 8) %></h4>
<h4>ASK: &#579; <%= number_with_precision(@coin_ask, precision: 8) %></h4>
<h4>HIGH: &#579; <%= number_with_precision(@coin_high, precision: 8) %></h4>
<h4>LOW: &#579; <%= number_with_precision(@coin_low, precision: 8) %></h4>

<div class="container row">
    <h1><%= @coin_symbol %></h1>
      <div class="col s6">
        <%= content_tag "div", id: "chartdiv", data: {chartArray: @data_by_minute_result, coinSymbol: params[:id]} do %>
        <% end %>
      </div>
      <div class="col s6">
          <a id="unfollow-coin"
          class="waves-effect waves-light btn red darken-4 <%= 'hide' if !@is_following %>"
          href="<%= following_path %>"
          data-method="delete" rel="nofollow">
          <i class="material-icons left">star</i>Unfollow</a>
          <a id="follow-coin"
          class="waves-effect waves-light btn green darken-4 <%= 'hide' if @is_following %>"
          href="<%= following_path %>"
          data-method="put" rel="nofollow">
          <i class="material-icons left">star</i>Follow</a></a>
      </div>
</div>
