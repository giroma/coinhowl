<%= form_for(@user) do |f| %>
<div class="container">
<div class="row">
    <form class="col s9 offset-s3" action="">
      <div class="row">
        <div id="user-info">

          <h1><img class="avatar" src="<%= @avatar %>" alt="avatar"><%= @user.username %>'s Page!</h1>
        </div>
        <div class="input-field col s6">
          <p>Username:</p>
          <input disabled placeholder="<%= @user.username %>" id="username" type="text" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <p>e-mail:</p>
          <input disabled placeholder="<%= @user.email %>" id="email" type="text" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <p>Phone number:</p>
          <%= f.telephone_field :phone %>
          <!-- <input placeholder="<%= @user.phone %>" id="phone" type="text" class="validate"> -->
        </div>
      </div>
      <div class="row">
        <p>Receive alerts by:</p>
        <div class="input-field col s3">
          <%= check_box_tag 'phone_alert', "true", @user.phone_alert %>
          <label for="phone_alert">Text Message</label>
        </div>
        <div class="input-field col s3">
          <%= check_box_tag 'email_alert', 'true', @user.email_alert %>
          <label for="email_alert">e-mail</label>
        </div>
      </div>
      <div class="row">
      </div>
      <div class="row">
        <div class="col s2 push-s2">
          <button class="btn waves-effect waves-light" type="submit" name="action" action="<%= user_path %>" method="POST">update
            <i class="material-icons right">edit</i>
          </button>
        </div>
      </div>

  </div>
<% end %>
